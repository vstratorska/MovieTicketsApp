@using Microsoft.AspNetCore.Identity
@using TicketsApp.Domain.Identity
@inject SignInManager<TicketsAppUser> SignInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cineplexx</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TicketsApp.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class=" custom-nav navbar navbar-expand-sm navbar-toggleable-sm  box-shadow mb-3">
            <div class="container">
                <a class="logo" asp-area="" asp-controller="Home" asp-action="Index"><i>Cineplexx</i></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house-fill"></i> Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Movies" asp-action="Index"><i class="bi bi-film"></i> Movies</a>
                        </li>
                        <li class="nav-item" style="@(SignInManager.IsSignedIn(User) ? "" : "display: none;")">
                            <a class="nav-link text-light" asp-area="" asp-controller="ShoppingCarts" asp-action="Index"><i class="bi bi-cart-fill"></i> ShoppingCart</a>
                        </li>
                        <li class="nav-item" style="@(SignInManager.IsSignedIn(User) ? "" : "display: none;")">
                            <a class="nav-link text-light" asp-area="" asp-controller="Orders" asp-action="Index"><i class="bi bi-bag-check-fill"></i> My Orderst</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer ">
        <div class="container text-center">
            <div class="row">
                <div class="col-md-4 mt-4">
                    <h5 class="fw-bold">About us</h5>
                    <p class="mt-3 text-wrap">
                        This is a web application for online ticket purchase for all movies currently available in our cinema. In just a few clicks you will have your tickets much earlier than others.
                    </p>
                    <p>Thank you for your trust.</p>
                </div>
                <div class="col-md-4 mt-4">
                    <h5 class="fw-bold">Quick links</h5>
                    <ul class="list-unstyled mt-3 text-start">
                        <li><a class="text-light" asp-area="" asp-controller="Movies" asp-action="Index">Movies</a></li>
                        <li style="@(SignInManager.IsSignedIn(User) ? "" : "display: none;")"><a class="text-light" asp-area="" asp-controller="ShoppingCarts" asp-action="Index">My ShoppingCart</a></li>
                        <li style="@(SignInManager.IsSignedIn(User) ? "display: none;" : "") width:123.6px"><a class="text-light" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mt-4">
                    <h5 class="fw-bold">Contact</h5>
                    <ul class="list-unstyled mt-3 text-start">
                        <li>email@example.com</li>
                        <li>+ 33 12 14 15 16</li>
                        <li>123 CityMall, Skopje, Macedonia</li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
