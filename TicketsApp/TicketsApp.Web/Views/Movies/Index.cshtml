@model List<TicketsApp.Domain.Domain.Movie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    

    @for(int i=0;i<Model.Count; i++)
    {
        var item = Model[i];
        if(i % 4 == 0)
        {
            @:<div class="row">
        }
        <div class="col-md-3 mt-5">
           <a asp-controller="Movies" asp-action="Details" asp-route-id="@item.Id">
            <div class="card rounded-0 border-0" style="width: 17rem; height: 34rem">
                <div class="card-img-container">
                <img class="card-img-top" src="@item.MovieImage" alt="Card image cap">
                </div>
                <div class="card-body">
                    <h5 class="card-title fw-bold">@item.MovieName</h5>
                    <h6>@item.Genres</h6>
                    <h6>Rating: @item.Rating</h6>
                </div>              
            </div>
            </a>
        </div>

        if(i % 4 == 3)
        {
            @:</div>
        }
    }
</div>


