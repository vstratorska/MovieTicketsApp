@model List<TicketsApp.Domain.Domain.Order>


@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<h1>My Orders</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                Order Id
            </th>
          
            <th>
                Number of tickets ordered
            </th>
            <th>
                Total
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
          
            <tr>
                <td>@(Model.IndexOf(item) + 1)</td>
                <td>
                    @Html.DisplayFor(modelItem =>item.Id)
                </td>

            
                <td>
                    @(item.TicketsInOrder != null ? item.TicketsInOrder.Sum(t => t.Quantity) : 0)
                </td>
                <td>
                    @(item.TicketsInOrder != null ? item.TicketsInOrder.Sum(t => t.Quantity*t.Ticket.Price) : 0)
                </td>
                <td>
                  <a asp-action="Details" asp-controller="Orders" asp-route-id="@item.Id" class="btn btn-warning">View Order</a>
                </td>
             
            </tr>
        }
    </tbody>
 
</table>