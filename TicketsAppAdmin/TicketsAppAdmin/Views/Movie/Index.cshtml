@model List<TicketsAppAdmin.Models.Movie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="mt-5">
        <a class="btn btn-danger" asp-controller="Movie" asp-action="Create">Add new Movie</a>
        <a class="btn btn-secondary" asp-controller="Movie" asp-action="Import">Import Movies from Excel</a>
    </div>
</div>    
<div class="container">
    @for(int i=0;i<Model.Count; i++)
    {
        var item = Model[i];
        if(i % 4 == 0)
        {
            @:<div class="row text-center">
        }
        <div class="col-md-3 mt-5">
            <a asp-controller="Movie" asp-action="Details" asp-route-id="@item.Id">
                    <div class="card  rounded-0 border-0" style="width: 17rem; height: 38rem">
                        <div class="card-img-container">
                <img class="card-img-top" src="@item.MovieImage" alt="Card image cap">
                </div>
                <div class="card-body text-black" style="height: 10rem">
                    <h5 class="card-title fw-bold">@item.MovieName</h5>
                    <h6>@item.Genres</h6>
                    <h6>Rating: @item.Rating</h6>
                </div>
                <div class="card-footer">
                    <a asp-controller="Movie" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-controller="Movie" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </div>
            </div> 
            </a>
        </div>

        if(i % 4 == 3)
        {
            @:</div>
        }
    }
</div>


