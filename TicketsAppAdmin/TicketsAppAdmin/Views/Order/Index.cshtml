@{
}
@model List<TicketsAppAdmin.Models.Order>


<div class="container">
    <h1>Orders</h1>
     <div class="row"> 
         <a asp-controller="Order" asp-action="ExportAllOrders" class="btn btn-primary">Export Orders Excel</a> 
     </div>
    <div class="row">
        <a asp-controller="Order" asp-action="ExportAllOrdersPDF" class="btn btn-info mt-3">Export Orders Pdf</a>
    </div>

    <div class="row m-5">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Order id
                    </th>
                    <th>
                        Customer details
                    </th>
                    <th>
                        Number of products
                    </th>
                    <th>Total</th>
                    <th></th>
                    <th></th>
                    
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    var item = Model[i];
                    <tr>
                        <td>@item.Id</td>
                        <td>
                            @item.Owner.Email
                        </td>

                        <td>
                            @(item.TicketsInOrder != null ? item.TicketsInOrder.Sum(t => t.Quantity) : 0)
                        </td>
                        <td>
                            @(item.TicketsInOrder != null ? item.TicketsInOrder.Sum(t => t.Quantity * t.Ticket.Price) : 0)
                        </td>
                        <td>  
                             <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">View Order</a> 
                         </td>
                        <td>
                            <a asp-action="CreateInvoice" asp-route-id="@item.Id" class="btn btn-info">create invoice</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>