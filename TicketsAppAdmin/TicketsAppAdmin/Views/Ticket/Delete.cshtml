@model TicketsAppAdmin.Models.Ticket

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center custom-title">
<h3 class="text-light">Are you sure you want to delete this ticket for @Html.DisplayFor(model => model.Movie.MovieName)?</h3>
    <form asp-action="DeleteTicket">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" name="movieId" value="@Model.Movie.Id" />
        <input type="submit" value="Delete" class="btn btn-danger w-25 mt-4" /> 
    </form>
</div>
